{
    "name": "na-map-data",
    "version": "0.0.1",
    "packageManager": "yarn@3.6.1",
    "type": "module",
    "scripts": {
        "build:data:convert": "yarn ts-node --esm src/convert-api-data.ts",
        "build:deploy-main": "       TARGET=na-map       run-s prod       build:push-prod deploy:netlify",
        "build:load": "yarn ts-node --esm src/load-api-data.ts",
        "build:push-prod": "git add --ignore-errors . && (git diff-index --quiet HEAD || git commit -m 'build: update public') && git push --quiet gitlab",
        "clean:src:js": "find ./src/js -name \"*.ts\" -type f -regextype posix-egrep -regex \".*/(browser|common|node)/.+\" -exec bash -c 'for file in \"${1%.ts}\".js \"${1%.ts}\".js.map; do [ -e \"$file\" ] && rm -f \"$file\"; done' - '{}' ';'",
        "deploy:netlify": "./helper/deploy.sh",
        "docs": "run-p 'docs:*'",
        "docs:js": "documentation build src/js/**.js build/**.mjs -f html -o ./doc-js",
        "docs:sass": "sassdoc src/scss -d ./doc-sass",
        "helper:build:distances": "yarn ts-node --esm --max-heap-size=10000 src/get-distances.ts",
        "helper:build:modules": "run-s 'helper:build:modules:**'",
        "helper:build:modules:1:get": "cp -u /mnt/Modules.zip build/ && unzip -L -u build/Modules.zip -d build/",
        "helper:build:modules:2:correct:dir": "rm -rf build/Modules/; mv build/modules build/Modules",
        "helper:build:modules:3:correct:enc": "/usr/bin/bash -c 'cd build/Modules/; for FILE in *.xml; do dos2unix -m -q \"${FILE}\"; done'",
        "helper:build:modules:4:correct:names": "cd build/Modules/; mv \"traders brig hull.xml\" \"trader brig hull.xml\"; mv \"agamemnon deck armor .xml\" \"agamemnon deck armor.xml\"",
        "helper:check-neutral-ports": "yarn ts-node --esm helper/check-neutral-ports.ts",
        "helper:get-ship-speed-constants": "yarn ts-node --esm helper/get-ship-speed-constants.ts",
        "helper:loc": "npx cloc --by-file --not-match-f='.d.ts' --quiet ./src/js",
        "helper:size:css": "find public/ -iname '*.css' -exec du -bc {} + | sort -k 2 | sed 's|public/||'",
        "helper:size:js": "find public/ -iname '*.js' -not -iname 'data-*.js' -exec du -bc {} + | sort -k 2 | sed 's|public/||'",
        "helper:size:largest": "du -a ~/ -BM | sort -n -r | head -n 15",
        "lint": "run-s 'lint:*'",
        "lint:js": "eslint -c .eslintrc.json --ext .ts,.tsx src/js",
        "main:release": "    git pull &&      run-s build:load build:data:convert release deploy:netlify",
        "release": "standard-version",
        "typecheck": "tsc --noEmit",
        "update": "yarn set version stable && yarn upgrade-interactive"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.6.7",
        "@commitlint/config-conventional": "^17.6.7",
        "@types/collections": "^5.1.2",
        "@types/d3-array": "^3.0.5",
        "@types/eslint": "^8.44.0",
        "@types/lzma-native": "^4.0.1",
        "@types/node": "^20.4.2",
        "@types/pngjs": "^6.0.1",
        "@types/polylabel": "^1.1.0",
        "@types/recursive-readdir": "^2.2.1",
        "@typescript-eslint/eslint-plugin": "^6.1.0",
        "@typescript-eslint/parser": "^6.1.0",
        "collections": "^5.1.13",
        "d3-array": "^3.2.4",
        "dayjs": "^1.11.9",
        "eslint": "^8.45.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^5.0.0",
        "exceljs": "^4.3.0",
        "husky": "^8.0.3",
        "lzma-native": "^8.0.6",
        "netlify-cli": "^15.9.1",
        "pngjs": "^7.0.0",
        "polylabel": "^1.1.0",
        "prettier": "^3.0.0",
        "prettier-package-json": "^2.8.0",
        "recursive-readdir": "^2.2.3",
        "standard-version": "^9.5.0",
        "timelines-chart": "^2.12.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.6",
        "utility-types": "^3.10.0",
        "xml-js": "^1.6.11"
    },
    "engines": {
        "node": ">= 18"
    },
    "browserslist": [
        "defaults and supports es6-module and last 3 versions, maintained node versions"
    ],
    "prettier": {
        "printWidth": 120,
        "semi": false,
        "tabWidth": 4
    },
    "prettier-package-json": {
        "tabWidth": 4
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ],
        "rules": {
            "subject-case": [
                2,
                "never",
                [
                    "start-case",
                    "pascal-case",
                    "upper-case"
                ]
            ],
            "type-enum": [
                2,
                "always",
                [
                    "build",
                    "chore",
                    "ci",
                    "docs",
                    "feat",
                    "fix",
                    "perf",
                    "refactor",
                    "revert",
                    "style",
                    "test"
                ]
            ]
        }
    }
}
